@model UniversityManagementMVCWebApp.Models.CourseEnroll
@{
    ViewBag.Title = "SaveResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var students = ViewBag.Students;
    var gardes = ViewBag.Grades;
    string message = ViewBag.Message;
}

<h3 style="margin-left: 23%">SaveResult</h3>
<br/>


    <div class="container">
        <form class="form-horizontal" method="POST">
            <div class="form-group">
                <label for="registrationNoDropDownList" class="col-sm-2 control-label">Student Reg. No</label>
                <div class="col-sm-10">
                    <select class="form-control" id="registrationNoDropDownList" name="StudentId">
                        <option value="0">--Select Registration No--</option>
                        @foreach (var item in students)
                        {
                            <option value="@item.Id">@item.RegistrationNo</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(l => l.StudentId)
                </div>
            </div>

            <div class="form-group">
                <label for="nameTextBox" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="nameTextBox" placeholder="Name" name="Name" readonly="readonly">
                </div>
            </div>
            <div class="form-group">
                <label for="emailTextBox" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="emailTextBox" placeholder="Email" name="Email" readonly="readonly">
                </div>
            </div>
            <div class="form-group">
                <label for="departmentTextBox" class="col-sm-2 control-label">Department</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="departmentTextBox" placeholder="Department" name="DepartmentName" readonly="readonly">
                </div>
            </div>
            <div class="form-group">
                <label for="courseDropDownList" class="col-sm-2 control-label">Course</label>
                <div class="col-sm-10">
                    <select class="form-control" id="courseDropDownList" name="CourseID">
                        <option value="0">--Select Course--</option>
                    </select>
                    @Html.ValidationMessageFor(l => l.CourseId)
                </div>
            </div>
            <div class="form-group">
                <label for="dateTextBox" class="col-sm-2 control-label">Grade</label>
                <div class="col-sm-10">
                    <select class="form-control" id="gradeDropDownList" name="CourseGrade">
                        @*<option value="z">--Select a Grade--</option>*@
                        @foreach (var item in gardes)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(l => l.CourseGrade)
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-info">Save</button>
                </div>
            </div>
        </form>

        @message
    </div>
   
@section scripts{
    @*<script src="~/Scripts/jquery-3.1.1.min.js"></script>*@
<script src="~/Scripts/StudentResultView.js"></script>
}
